{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"lib": ["ES2019"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "bin",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"target": "es2019"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"references": [
		{ "path": "./src/client" },
		{ "path": "./src/server" }
	]
}