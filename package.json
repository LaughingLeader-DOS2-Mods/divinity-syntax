{
	"name": "divinity-stats-languageserver",
	"displayName": "Divinity Syntax",
	"description": "Syntax highlighting for Divinity: Original Sin 2 - Definitive Edition stats / behavior scripting",
	"author": "LaughingLeader",
	"license": "MIT",
	"version": "1.0.0",
	"icon": "images/vscode-divinitystats-icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/LaughingLeader-DOS2-Mods/divinity-stats-languageserver"
	},
	"publisher": "Languages",
	"categories": [],
	"keywords": [
		"Larian",
		"Divinity Engine",
		"Stats"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:divinity-stats",
		"workspaceContains:**/Stats/Generated",
		"workspaceContains:**/Stats/Generated/Data",
		"onLanguage:divinity-behavior-scripting",
		"workspaceContains:**/Scripts"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"title": "Divinity Stats",
			"type": "object",
			"properties": {
				"divinityStats.definitionFile": {
					"type": "string",
					"default": "",
					"description": "The path to the stat definitions file. Default should be 'Divinity Original Sin 2\\DefEd\\Data\\Editor\\Config\\Stats\\StatObjectDefinitions.sod'.",
					"scope": "resource"
				},
				"divinityStats.enumFile": {
					"type": "string",
					"default": "",
					"description": "The path to the enumerations file. Default should be 'Divinity Original Sin 2\\DefEd\\Data\\Editor\\Config\\Stats\\Enumerations.xml'.",
					"scope": "resource"
				},
				"divinityStats.limitToAvailableProperties": {
					"type": "boolean",
					"default": true,
					"description": "Show only available (not declared) properties for stats auto-completion. Setting this to false will show all valid properties.",
					"scope": "resource"
				}
			}
		},
		"languages": [
			{
				"id": "divinity-stats",
				"aliases": [
					"Divinity Stats",
					"divinity-stats"
				],
				"filenamePatterns": [
					"**/Stats/Generated/*.txt",
					"**/Stats/Generated/Data/*.txt"
				],
				"configuration": "./syntaxes/divinity-stats.language-configuration.json"
			},
			{
				"id": "divinity-behavior-scripting",
				"aliases": [
					"Behavior Scripting",
					"divinity-behavior-scripting"
				],
				"extensions": [".charscript", ".itemScript", ".gameScript"],
				"configuration": "./syntaxes/divinity-behavior-scripting.language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "divinity-stats",
				"scopeName": "text.divinity.stats",
				"path": "./syntaxes/divinity-stats.tmLanguage.json"
			},
			{
                "language": "divinity-behavior-scripting",
                "scopeName": "source.divinityBehaviorScripting",
                "path": "./syntaxes/divinity-behavior-scripting.tmLanguage.json"
            }
		]
	},
	"scripts": {
		"compile": "tsc -b",
		"lint": "eslint ./src/client/src ./src/server/src --ext .ts,.tsx",
		"package": "vsce package",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"vscode:prepublish": "npm run compile",
		"watch": "tsc -b -w"
	},
	"devDependencies": {
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "^5.3.0",
		"@typescript-eslint/parser": "^5.3.0",
		"eslint": "^8.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4"
	}
}
